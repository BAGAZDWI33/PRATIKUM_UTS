<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".dasboard"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hi Prass"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginBottom="10dp"
                android:text="apa yang anda butuhkan \nsekarang?"/>

            <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_cari"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/abu"
                    android:text="Jahit,Laundry"
                    android:gravity="left|center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/abutext" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded3"
                    android:src="@drawable/ic_mic"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded"
                    android:src="@mipmap/ic_bersih_foreground"
                    android:cropToPadding="true"
                    android:padding="20dp"
                    android:elevation="20dp" />

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded"
                    android:src="@mipmap/ic_jahitt_foreground"
                    android:cropToPadding="true" />
                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded"
                    android:src="@mipmap/ic_laund_foreground"
                    android:cropToPadding="true"
                    android:padding="3dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-40dp">
                <TextView
                    android:background="@drawable/boxx"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:text="CLEANING \nSERVICE"
                    android:textColor="@color/black"
                    android:elevation="20dp" />
                <TextView
                    android:background="@drawable/boxx"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:text="\nJAHIT"
                    android:textColor="@color/black"
                    android:elevation="20dp" />
                <TextView
                    android:background="@drawable/boxx"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:text="\nLAUNDRY"
                    android:textColor="@color/black"
                    android:elevation="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terdekat Dengan Kamu"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:layout_marginTop="10dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp">
        <ImageView
            android:id="@+id/jt"
            android:src="@mipmap/ic_tukang_foreground"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:elevation="20dp" />
        <RelativeLayout
            android:layout_width="900dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/l"
            android:src="@mipmap/ic_jgambar_foreground"
            android:layout_width="190dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:elevation="20dp"
            android:layout_marginRight="0dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/text11"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/jt"
            android:text="MAMAN TUKANG \n 1 x 8 jam Rp 100.000"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-46dp"
            android:background="@drawable/rounded"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/text2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text11"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/text11"
            android:text="SAYUTI JAHIT \n 1 STEL PAKAIAN RP120.000"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginTop="-60dp"
            android:background="@drawable/rounded" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text11"
            android:text="Sering Di kunjungi"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-230dp">
        <ImageView
            android:id="@+id/m"
            android:src="@mipmap/pagi_foreground"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:elevation="20dp" />
        <ImageView
            android:id="@+id/w"
            android:src="@mipmap/csapp_foreground"
            android:layout_width="190dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:elevation="20dp"
            android:layout_marginRight="0dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/text1"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/m"
            android:text="RIDWAN LAUNDRY \n 1kg Rp 8.000"
            android:textSize="10sp"
            android:layout_marginTop="-40dp"
            android:textColor="@color/black"
            android:layout_marginLeft="6dp"
            android:background="@drawable/rounded"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/text"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text1"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/text1"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:text="SANTI CLEANING SERVICE \n ROOM 3X3 M Rp. 30.000"
            android:layout_marginTop="-30dp"
            android:background="@drawable/rounded" />


    </RelativeLayout>

</RelativeLayout>


